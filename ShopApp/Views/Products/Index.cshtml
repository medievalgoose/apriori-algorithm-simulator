@model IEnumerable<ShopApp.Models.Product>;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    
*@
@{
    ViewData["Title"] = "Products List";
}

<h1>Products List</h1>

<a asp-action="Create" asp-controller="Products" class="btn btn-primary">Create new Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.Category?.CategoryName</td>
                <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>